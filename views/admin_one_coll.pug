doctype html
html(lang="ru")
  head
    title Posts
    link(href='/css/styles.css', rel='stylesheet')
  body
    div(class="nav")
      ul
        li
          a(href='/admin') DB Collections
        li(style="float:right")
          a(href="/logout") Log out
        li(style="float:right")   
          a(href=user_ref) My profile 
    h1 Collection: 
      strong #{name} 
    ul(id="objs")
      each obj in objs
        li(data-id=obj._id)=obj
          button(class='button', data-cmd='delete') Delete
      else 
        strong no #{name}s
    script(src='/js/admin.js')
doctype html
html(lang="ru")
  head
    title Posts
    link(href='/css/styles.css', rel='stylesheet')
  body
    div(class="nav")
      ul
        li
          a(href="/") Posts 
        li
          a(href='/post/new') Add post 
        li(style="float:right")
          a(href="/logout") Log out
        li(style="float:right")
          a(href=user_ref) My profile
    h1 Posts
    p There are 
      strong #{posts.length} posts! 
    ul(id="posts")
      for post in posts
        li 
          - var post_id = '/post/' + post.id
          - var user_id = '/user/' + post.author.login
          h2 title: #{post.title} 
          h4 user: 
            a(href=user_id) #{post.author.login} 
          h5 time: #{post.lastChangeAt}
          h3 
            a(href=post_id) post content 

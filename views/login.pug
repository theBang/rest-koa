doctype html
html(lang="ru")
  head
    title #{title}
    link(href='/css/styles.css', rel='stylesheet')
  body
    if registered
      p #{login}, Вы уже вошли! 
    else
      div(class="nav")
        ul
          li
            a(href="/login") Log in 
          li(style="float:right")
            a(href="/signup") Sign Up
      div(class="login-form")
        form(action = "/login" method = "POST")
          input(
            name = "login" 
            type = "text" 
            required 
            placeholder = "ID Пользователя"
          ) 
          br
          input(
            name = "password" 
            type = "password" 
            required 
            placeholder = "Пароль"
          )
          br
          button(type = "Submit") Войти
